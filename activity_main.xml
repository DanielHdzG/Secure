<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/btn_user">

    <Button
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:id="@+id/btn_faceboo"
            android:background="@drawable/facebook"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginTop="16dp"/>
    <Button
            android:text=""
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/button2" android:background="@drawable/phone" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
    <Button
            android:text=""
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/button3" android:background="@drawable/pictures"
            app:layout_constraintStart_toEndOf="@+id/button4" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    <Button
            android:text=""
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:id="@+id/button4" android:background="@drawable/home"
            app:layout_constraintStart_toEndOf="@+id/button5" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    <Button
            android:text=""
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/button5" android:background="@drawable/alarm"
            app:layout_constraintStart_toEndOf="@+id/button2" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    <Button
            android:text=""
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/button6" android:background="@drawable/user"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toEndOf="@+id/button3" android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"/>
    <Button
            android:text=""
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/button7" android:background="@drawable/barras"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/secure"
            android:layout_width="155dp"
            android:textSize="40sp"
            android:layout_height="46dp"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="128dp" android:layout_marginStart="128dp"/>
    <Switch
            android:text="Activar Boton de Emergencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/switch1"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="104dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp"/>
    <EditText
            android:layout_width="388dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:drawableLeft="@drawable/magnify"
            android:text=""
            android:hint="Accidentes cerca de mi"
            android:editable="true"
            android:ems="10"
            android:id="@+id/editText" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp"
            android:importantForAutofill="no" android:layout_marginEnd="22dp" android:layout_marginRight="22dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>